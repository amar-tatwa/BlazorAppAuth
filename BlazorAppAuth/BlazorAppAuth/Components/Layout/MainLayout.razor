@using BlazorAppAuth.Client.Components
@inherits LayoutComponentBase
<RadzenComponents @rendermode="InteractiveAuto" />
@* <RadzenComponents @rendermode="InteractiveAuto" /> *@

<RadzenLayout Style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body'">
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <RadzenLabel Text="Header" />
             @* render mode don't really need here but main application used it *@
            <UserInfoComponent/>
            @* <UserInfo /> *@
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@sidebarExpanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path="" />
            <RadzenPanelMenuItem Text="Users" Icon="account_box" />
            <RadzenPanelMenuItem Text="Login" Icon="account_box" Path="login-2"/>
            <RadzenPanelMenuItem Text="Logout" Icon="account_box" Path="Logout" />
            <RadzenPanelMenuItem Text="protected" Icon="account_box" Path="protected" />
        </RadzenPanelMenu>
        <div class="rz-p-4">
            Sidebar
        </div>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
</RadzenLayout>

@code {
    bool sidebarExpanded = true;
}